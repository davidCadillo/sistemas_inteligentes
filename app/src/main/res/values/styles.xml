<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">


    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorNoValidado</item>
    </style>

    <style name="Validado" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorValidado</item>
    </style>

    <style name="Normal" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
